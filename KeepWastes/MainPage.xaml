                                                     Foreground="#FF7B35FF"
                                                     Height="30"
                                                     Width="30"
                                                     HorizontalAlignment="Right"
                                                     Margin="0,1,-1,0">
                                <materialDesign:PackIcon.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="46.245"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </materialDesign:PackIcon.RenderTransform>
